@model IEnumerable<ASI.Basecode.Data.Models.Book>

<div class="container pt-5">
    <a asp-controller="Book" asp-action="Create" class="btn btn-outline-primary mb-3">Create Book</a>

    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <h4 class="card-text font-weight-bold">No books to display</h4>
        }
        else
        {
            @foreach (var book in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-text font-weight-bold">@book.Title</h4>
                            <p class="card-text"><b>@book.Description</b></p>
                            <p class="card-text">By <b>@book.Author</b></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">@book.CreatedTime.ToString("dd/MM/yyyy")</small>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
